<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/reconfigureDialog"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/f1Txt"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="F1 Mapping "
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/f1Label"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/f2Txt"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="F2 Mapping"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toEndOf="@+id/f2Label"
        app:layout_constraintTop_toBottomOf="@+id/f1Txt" />

    <TextView
        android:id="@+id/f2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="44dp"
        android:fontFamily="casual"
        android:text="F2:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f1Label" />

    <TextView
        android:id="@+id/f1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="56dp"
        android:fontFamily="casual"
        android:text="F1:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ReconSave"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/border"
        android:fontFamily="casual"
        android:text="Save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f2Label" />

    <Button
        android:id="@+id/ReconCancel"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/border"
        android:fontFamily="casual"
        android:text="Cancel"
        app:layout_constraintStart_toEndOf="@+id/ReconSave"
        app:layout_constraintTop_toBottomOf="@+id/f2Txt" />
</androidx.constraintlayout.widget.ConstraintLayout>